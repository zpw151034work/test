/* pages/healthassessment/index.wxss */
.clearfix:after {
	content: ".";
	display: block;
	height: 0;
	clear: both;
	visibility: hidden;
}
  
.fl {
	float: left;
}

.fr {
	float: right;
}

.container {
	width: 100%;
	background: #fff;
	box-sizing: border-box;
	padding-top:30rpx;
}

.content_box {
	width: 702rpx;
	margin: 0 auto;
	background: #fff;
	border-radius: 20rpx;
	margin-bottom: 40rpx;
	border: 1px solid #eee;
}
.base_info{
	width:590rpx;
	margin:20rpx auto;
	padding:32rpx 32rpx; 
	font-size:28rpx;
	color:28rpx;
	border-radius:20rpx;
	margin-top:20rpx;
}
