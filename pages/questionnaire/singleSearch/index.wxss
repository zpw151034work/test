/* pages/questionnaire/edittextPage/edittextThem.wxss */

.viewBg {
  display: flex;
  width: 100%;
  height: 100%;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
}

.progress-box {
  width: 90%;
  margin-top: 50rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #59B34E;
  text-align: center;
  margin-top: 100rpx;
}

.contentTheme {
  width: 90%;
  height: 55%;
  margin-top: 30rpx;
  position: relative;
}

.scrollTheme {
  height: 100%;
}

.bottomBg {
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.backTheme {
  width: 35%;
  height: 100rpx;
  background: #ECEDEE;
  border-radius: 50rpx;
  color: #4A4A4A;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.sureTheme {
  width: 35%;
  height: 100rpx;
  background: #59B34E;
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bottomPhoneLay {
  height: 50rpx;
  margin-top: 40rpx;
  font-size: 20rpx;
  color: #9B9B9B;
}

.search {
  width: 660rpx;
  height: 106rpx;
  margin: 0 auto;
  position: relative;
}

.search input {
  width: 660rpx;
  margin: 0 auto;
  height: 106rpx;
  border-radius: 10rpx;
  text-indent: 1em;
  border: 1rpx solid #9B9B9B;
  padding-left: 10rpx;
  text-align: center;
}

.search image {
  position: absolute;
  top: 50%;
  right: 10rpx;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
}

.contentBox {
  width: 90%;
  height: 40%;
}

.titleTip {
  width: 660rpx;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;

}

.big,
.small,
.medium {
  border-radius: 50%;
}

.big {
  width: 16rpx;
  height: 16rpx;
  background: #000000;
  opacity: 0.2;
}

.medium {
  width: 12rpx;
  height: 12rpx;
  background: #000000;
  opacity: 0.1;
}

.small {
  width: 8rpx;
  height: 8rpx;
  background: #000000;
  opacity: 0.05;
}

.bigL {
  position: absolute;
  top: 50%;
  left: 200rpx;
  transform: translate(0, -50%);
}

.mediumL {
  position: absolute;
  top: 50%;
  left: 180rpx;
  transform: translate(0, -50%);
}

.smallL {
  position: absolute;
  top: 50%;
  left: 160rpx;
  transform: translate(0, -50%);
}

.tltleText {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 32rpx;
  color: #4A4A4A;
  font-weight: 600;
}

.bigR {
  position: absolute;
  top: 50%;
  right: 200rpx;
  transform: translate(0, -50%);
}

.mediumR {
  position: absolute;
  top: 50%;
  right: 180rpx;
  transform: translate(0, -50%);
}

.smallR {
  position: absolute;
  top: 50%;
  right: 160rpx;
  transform: translate(0, -50%);
}

.commonDiseases {
  width: 100%;
  height: 30%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}

.commonDiseasesItem {
  font-size: 24rpx;
  color: #4A4A4A;
  border: 1rpx solid #D8D8D8;
  border-radius: 4rpx;
  margin-bottom: 10rpx;
  display: inline-block;
  width: 30%;
  text-align: center;
  margin-left: 2%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.contentBox {
  width: 660rpx;
  margin: 0 auto;
  height: 30%;
  padding: 30rpx 0;
  overflow: scroll-y;
  padding: 30rpx 0;
}

.contentBox .item {
  font-size: 24rpx;
  color: #4A4A4A;
  padding: 14rpx 32rpx;
  padding: 12rpx 64rpx 12rpx 16rpx;
  background: #59B34E;
  border-radius: 4rpx;
  margin-right: 22rpx;
  margin-bottom: 30rpx;
  display: inline-block;
  font-size: 28rpx;
  color: #fff;
  position: relative;

}

.contentBox .item image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 50%;
  right: 0rpx;
  transform: translate(-50%, -50%);
}

.searchData {
  width: 98%;
  margin: 0 auto;
  height: 70%;
  overflow: scroll-y;
  background: #F3F3F3;
  z-index: 10000 !important;
  position: absolute;
  top: 16%;
  left: 1%;

}

.searchData .item {
  font-size: 25rpx;
  color: #4A4A4A;
  border-bottom: 1rpx solid #D8D8D8;
  border-radius: 4rpx;
  margin-right: 22rpx;
  width: 100%;
  display: block;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.commonDiseasesLay{
  display: inline;

}