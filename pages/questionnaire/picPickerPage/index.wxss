/* pages/questionnaire/edittextPage/edittextThem.wxss */

.viewBg {
  display: flex;
  width: 100%;
  height: 100%;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
}

.progress-box {
  width: 90%;
  margin-top: 50rpx;
}

.title {
  width: 90%;
  font-size: 40rpx;
  font-weight: 600;
  color: #59B34E;
  text-align: center;
  margin-top: 100rpx;
}

.contentTheme {
  width: 90%;
  height: 50%;
  margin-top: 30rpx;
}

.input {
  width: 100%;
  height: 100rpx;
  border: 1rpx solid #9b9b9b;
  border-radius: 5rpx;
  text-align: center;
  font-size: 35rpx;
  color: #4A4A4A;
}

.bottomBg {
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.backTheme {
  width: 35%;
  height: 100rpx;
  background: #ECEDEE;
  border-radius: 50rpx;
  color: #4A4A4A;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.sureTheme {
  width: 35%;
  height: 100rpx;
  background: #59B34E;
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bottomPhoneLay {
  height: 50rpx;
  margin-top: 40rpx;
  font-size: 20rpx;
  color: #9B9B9B;
}

.pickerTheme {
  font-size: 30rpx;
  font-weight: bold;
}

.pickerChoice {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1rpx solid #9B9B9B;
  border-radius: 5rpx;
}

.pickerChoiceContent {
  width: 80%;
  text-align: center;
  padding-left: 10%;
}

.unitTheme {
  font-size: 30rpx;
  color: #000000;
}

.tipBgTheme {
  display: flex;
  width: 100%;
  height: 10%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 25rpx;
  color: #9B9B9B;
}

.imageBgTheme {
  display: flex;
  width: 100%;
  height: 65%;
  flex-direction: row;
}

.imageTheme {
  height: 100%;
  width: 100%;
}

.exampleLayTheme {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  margin-top: 2%;
}
.exampleTheme {
  height: 100%;
  font-size: 25rpx;
  color: #9B9B9B;
}