/* pages/questionnaire/edittextPage/edittextThem.wxss */

.viewBg {
  display: flex;
  width: 90%;
  height: 100%;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
  margin-left: 5%;
}

.title {
  font-size: 30rpx;
  color: #000000;
  margin-top: 2%;
}

.topPic {
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: row;
  margin-top: 4%;
}

.picLayTheme {
  width: 19%;
  height: 100%;
}

.imageTheme {
  width: 100%;
  height: 100%;
}

.nameLayTheme {
  display: flex;
  flex-direction: column;
  height: 100%;
  margin-left: 2%;
}

.nameTheme {
  font-size: 25rpx;
  color: #000000;
  font-weight: 600;
}

.nameTipTheme {
  margin-top: 1%;
  font-size: 20rpx;
  color: #4A4A4A;
}

.examplePicLayTheme {
  width: 100%;
  height: 45%;
  margin-top: 2%;
  text-align: center;
}

.examplePic {
  width: 100%;
  height: 100%;
}

.summaryTipLayTheme {
  width: 100%;
  height: 5%;
  margin-top: 1%;
}

.summaryTip {
  color: #000000;
  font-size: 25rpx;
}

.exampleResultLay {
  width: 100%;
  height: 8%;
  display: flex;
  flex-direction: row;
  border: 1rpx solid #9B9B9B;
  border-radius: 5rpx;
  align-items: center;
}

.exampleResult {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-left: 12%;
}

.exampleResultNum {
  font-size: 30rpx;
  color: #000000;
  font-weight: 600rpx;
}

.exampleResultPic {
  width: 40rpx;
  height: 40rpx;
  margin-left: 1%;
}

.exampleResultUnit {
  font-size: 30rpx;
  color: #000000;
  font-weight: 600rpx;
  margin-right: 10rpx;
}

.bottomBg {
  width: 100%;
  height: auto;
  margin-top: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.backTheme {
  width: 45%;
  height: 80rpx;
  background: #ECEDEE;
  border-radius: 50rpx;
  color: #4A4A4A;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.sureTheme {
  width: 45%;
  height: 80rpx;
  background: #59B34E;
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bottomPhoneLay {
  height: 50rpx;
  margin-top: 40rpx;
  font-size: 20rpx;
  color: #9B9B9B;
}