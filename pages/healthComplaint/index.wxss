.container{
	width:750rpx;
  margin:0 auto;
	box-sizing: border-box;
	overflow: auto;
  background:#fff;
  position: relative;
} 
.viewBg {
 width: 660rpx;
 margin:0 auto;
height: 100%;
}
.viewBg .title{
  font-size: 28rpx;
  font-weight:600;
  padding:30rpx 0;
}
.titleTip{
  font-size: 20rpx;
  color: #4A4A4A;
}
.viewBg .item{
  padding-bottom:30rpx;
  border-bottom:1rpx solid #F3F3F3;
}
.van-uploader__preview-image{
  border-radius: 10rpx;
}
.van-uploader__upload{
  border-radius: 10rpx;
}

.bottomBg {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position:absolute;
  bottom:100rpx;
}

.sureTheme {
  width: 90%;
  height: 88rpx;
  background: #59B34E;
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 35rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bottomPhoneLay{
  width: 100%;
  height: 100rpx;
  margin-top: 40rpx;
  font-size: 20rpx;
  color: #9B9B9B;
  text-align: center;
}
.textarea-bg {
  background-color: #fff;
  padding:30rpx;
  width:600rpx;
  border:1rpx solid #eee;
}
.word{
  position: absolute;
  bottom:30rpx;
  right:30rpx;
}
